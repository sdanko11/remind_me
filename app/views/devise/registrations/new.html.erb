<div class="row">
  <div class="small-12 medium-6 large-6 small-centered columns">
    <h2>Sign up</h2>

    <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>

      <div><%= f.input :email, :autofocus => true %></div>

      <div><%= f.input :password, label: "Password" %></div>

      <div><%= f.input :password_confirmation %></div>

      <div><%= f.input :name %></div>

      <div><%= f.input :phone_number %></div>

      <div><%= f.submit "Sign up" %></div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>
